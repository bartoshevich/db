  <meta name="viewport" content="width=device-width, initial-scale=1">

  {% include "meta__tags.njk" %} 

  


  <script src="/assets/scripts/critical--theme.js"></script>
  <link rel="stylesheet"  href="/assets/css/style.css"> 

  {% include "icons.njk" %}
